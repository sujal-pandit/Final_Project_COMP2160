<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/main"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:padding="10dp"
tools:context=".MainActivity">



    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#000000"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/currentsavings"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Current Savings"
                android:textStyle="bold"
                android:layout_weight="1"
                android:textSize="26sp"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/add_savings"
                android:text="+"
                android:textSize="26dp"
                android:backgroundTint="#2db83d"/>
        </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        android:layout_centerInParent="true"
        android:layout_marginBottom="30dp"
        app:cardElevation="10dp"
        app:cardBackgroundColor="#4cd038">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">


            <EditText
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:background="@android:color/transparent"
                android:padding="16dp"
                android:text="Europe Trip: "
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="368dp"
                android:layout_height="77dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:text="Collected: "
                    android:textAlignment="center"
                    android:textColor="#204c39"
                    android:textSize="19sp"
                    android:textStyle="bold" />

                <EditText
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:padding="16dp"
                    android:text="$"
                    android:textAlignment="center"
                    android:textColor="#204c39"
                    android:textSize="19sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="49dp"
                    android:padding="5dp"
                    android:text=", Required: "
                    android:textAlignment="center"
                    android:textColor="#204c39"
                    android:textSize="19sp"
                    android:textStyle="bold" />

                <EditText
                    android:layout_width="84dp"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:padding="16dp"
                    android:text="$"
                    android:textAlignment="center"
                    android:textColor="#204c39"
                    android:textSize="19sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

        <!-- second cardview -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        android:layout_centerInParent="true"
        android:layout_marginBottom="30dp"
        app:cardElevation="10dp"
        app:cardBackgroundColor="#4cd038">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text=" Vancouver Bootcamp: "
                android:textAlignment="center"
                android:background="@android:color/transparent"
                android:padding="10dp"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="137dp"
                    android:layout_height="48dp"
                    android:padding="10dp"
                    android:text="Collected: "
                    android:textAlignment="center"
                    android:textColor="#204c39"
                    android:textSize="19sp"
                    android:textStyle="bold" />

                <EditText
                    android:layout_width="58dp"
                    android:layout_height="match_parent"
                    android:inputType="numberDecimal"
                    android:padding="16dp"
                    android:text="$"
                    android:textAlignment="center"
                    android:textColor="#204c39"
                    android:textSize="19sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:text=", Required: "
                    android:textAlignment="center"
                    android:textColor="#204c39"
                    android:textSize="19sp"
                    android:textStyle="bold" />

                <EditText
                    android:layout_width="55dp"
                    android:layout_height="match_parent"
                    android:inputType="numberDecimal"
                    android:padding="16dp"
                    android:text="$"
                    android:textAlignment="center"
                    android:textColor="#204c39"
                    android:textSize="19sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>

</RelativeLayout>

