<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/boy"
            android:layout_centerInParent="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="HOME"
            android:textAlignment="center"
            android:textSize="28dp"
            android:layout_weight="1"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/notification"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/notification"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#000000"
        android:layout_below="@id/appbar"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/currentbalance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/appbar"
        android:layout_margin="30dp"
        app:cardCornerRadius="16dp"
        android:layout_centerInParent="true"
        app:cardElevation="10dp"
        app:cardBackgroundColor="#6a008b">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CURRENT BALANCE:"
                android:textAlignment="center"
                android:padding="10dp"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$1000.00"
                android:textAlignment="center"
                android:padding="10dp"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textStyle="bold"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/biweeklyexpenditure"
        android:layout_below="@id/currentbalance"
        app:cardCornerRadius="16dp"
        android:layout_centerInParent="true"
        android:layout_marginBottom="30dp"
        app:cardElevation="10dp"
        app:cardBackgroundColor="#6a008b">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BI-WEEKLY EXPENDITURE: "
                android:textAlignment="center"
                android:padding="10dp"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$152.28"
                android:textAlignment="center"
                android:padding="10dp"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textStyle="bold"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#000000"
        android:layout_below="@id/biweeklyexpenditure"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:layout_marginHorizontal="10dp"
        android:id="@+id/recentexpenditure"
        android:layout_below="@id/biweeklyexpenditure"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recent Expenditures"
            android:textStyle="bold"
            android:layout_weight="1"
            android:textSize="26dp"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="60sp"
            android:layout_height="60sp"
            android:text="+"
            android:textSize="26dp"
            android:backgroundTint="#6a008b"
            />
    </LinearLayout>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginTop="10sp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            android:layout_centerInParent="true"
            android:layout_marginBottom="30dp"
            app:cardElevation="10dp"
            app:cardBackgroundColor="#bababa">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="McDonald's (Food and Beverages):"
                    android:textAlignment="center"
                    android:padding="10dp"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$13.29"
                    android:textAlignment="center"
                    android:padding="5dp"
                    android:textColor="#fa333e"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/currentbalance"
            app:cardCornerRadius="16dp"
            android:layout_centerInParent="true"
            android:layout_marginBottom="30dp"
            app:cardElevation="10dp"
            app:cardBackgroundColor="#bababa">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Foot Locker (Clothing):"
                    android:textAlignment="center"
                    android:padding="10dp"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$139.29"
                    android:textAlignment="center"
                    android:padding="5dp"
                    android:textColor="#fa333e"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#000000"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/recentexpenditure"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Current Savings"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:textSize="26dp"/>

                <com.google.android.material.button.MaterialButton
                    android:layout_width="60sp"
                    android:layout_height="60sp"
                    android:text="+"
                    android:textSize="26dp"
                    android:backgroundTint="#2db83d"
                    />
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginTop="10sp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                android:layout_centerInParent="true"
                android:layout_marginBottom="30dp"
                app:cardElevation="10dp"
                app:cardBackgroundColor="#4cd038">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Edit"
                        android:gravity="end"
                        android:textColor="#000000"
                        android:textSize="20sp"
                        android:textStyle="italic"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Europe Trip: "
                        android:textAlignment="center"
                        android:padding="10dp"
                        android:textColor="#000000"
                        android:textSize="20sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+$50 (Collected: 550$ , Required: 2000$)"
                        android:textAlignment="center"

                        android:textColor="#204c39"
                        android:textSize="19sp"
                        android:textStyle="bold"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginTop="10sp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                android:layout_centerInParent="true"
                android:layout_marginBottom="30dp"
                app:cardElevation="10dp"
                app:cardBackgroundColor="#4cd038">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Edit"
                        android:gravity="end"
                        android:textColor="#000000"
                        android:textSize="20sp"
                        android:textStyle="italic"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Vancouver Bootcamp: "
                        android:textAlignment="center"
                        android:padding="10dp"
                        android:textColor="#000000"
                        android:textSize="20sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+$50 (Collected: 150$ , Required: 500$)"
                        android:textAlignment="center"
                        android:padding="5dp"
                        android:textColor="#204c39"
                        android:textSize="19sp"
                        android:textStyle="bold"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>



    </LinearLayout>
</RelativeLayout>
</ScrollView>